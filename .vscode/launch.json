{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ZEditor (Visual Studio debugger)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ZEditor.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};${workspaceFolder}\\engine\\3rdparty\\VulkanSDK\\bin\\Win32"
                }
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "build ZEngine"
        },
        {
            "name": "Attach to ZEditor",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "${workspaceFolder}/bin/ZEditor.exe",
            "cwd": "${workspaceFolder}/bin"
        }

    ]
}